{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["ESNext", "DOM"],
    "module": "ESNext",
    "skipLibCheck": true,
    "incremental": true,

    "baseUrl": "app/javascript/lca",

    /* Bundler mode */
    "moduleResolution": "node",
    // "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "types": ["vite/client", "vitest/globals", "vitest/importMeta"],

    "allowJs": true,
    "paths": {
      "@/*": ["./*"],
      "Docs": ["../../../docs"],
      "Locales": ["../../../locales"]
    },

    /* Linting */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": false,

    "sourceMap": true
  },
  "include": ["app/javascript/lca/**/*", "./vite.config.ts"],
  "exclude": ["**/*.spec.ts", "node_modules", "vendor", "public", "coverage"],
  "compileOnSave": false
}
