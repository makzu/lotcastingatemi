{
  "compilerOptions": {
    // "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "app/javascript/lca",
    "paths": {
      "Docs": ["../../../docs"],
      "Locales": ["../../../locales"]
    },
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es7", "dom"],    
    // "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": false, // eslint already warns us
    "noUnusedParameters": false, // eslint already warns us
    "strictNullChecks": true,
    "module": "ES2020",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es6",
    "types": ["vitest/globals"],
    "jsx": "react-jsx"
  },
  "exclude": ["**/*.spec.ts", "node_modules", "vendor", "public"],
  "include": ["app/javascript/**/*", "./.eslintrc.js"],
  "compileOnSave": false
}
